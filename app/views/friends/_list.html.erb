<table class="table table-hover">
  <thead class="thead-dark">
  <tr>
    <th scope="col">Name</th>
    <th scope="col">E-Mail</th>
    <th scope="col">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% current_user.friends.each do |f| %>
    <tr>
      <th scope="row"><%= f.full_name %></th>
      <td><%= f.email %></td>
      <td>
        <div class="btn-group">
          <%= link_to 'View profile', user_path(f), class: 'btn btn-outline-primary' %>
          <%= link_to 'Stop following', friendship_path(f.id), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-outline-warning' %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
